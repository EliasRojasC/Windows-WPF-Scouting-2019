<Page x:Class="scoutingProject.Pages.Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:scoutingProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Schedule">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button Content="Send Updated Schedule" FontSize="15" Grid.Row="2" Style="{StaticResource StandardButton}" Click="SendScheduleClick"/>
        <TextBox Style="{StaticResource EntryBox}" Grid.Row="1" x:Name="ScheduleText" Height="20" Width="200"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource SourceSansProRegular}" FontSize="30">Enter Blue Aliance RSS URL</TextBlock>
    </Grid>
</Page>
